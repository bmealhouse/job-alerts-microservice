{
  "name": "job-alert-microservice",
  "version": "1.0.0",
  "description": "Monitor websites for new job postings",
  "main": "index.js",
  "author": "Brent Mealhouse <bmealhouse@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "micro-dev",
    "precommit": "lint-staged",
    "prepush": "xo && yarn test",
    "start": "micro",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node",
    "verbose": true
  },
  "lint-staged": {
    "*.js": [
      "xo",
      "prettier --write",
      "git add"
    ]
  },
  "now": {
    "type": "docker",
    "features": {
      "cloud": "v2"
    },
    "env": {
      "NODE_ENV": "production",
      "JOB_ALERTS_AUTH_TOKEN": "@job-alerts-auth-token",
      "JOB_ALERTS_SENTRY_DSN": "@job-alerts-sentry-dsn",
      "PRISMA_SERVER_ENDPOINT": "@prisma-server-endpoint",
      "SENDGRID_API_KEY": "@webtask-sendgrid-api-key",
      "SENDGRID_TO": "tmealhouse@gmail.com,bmealhouse@gmail.com"
    },
    "limits": {
      "maxConcurrentReqs": 1
    },
    "slot": "c1-m4096"
  },
  "prettier": {
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "renovate": {
    "automerge": true,
    "automergeType": "branch-push",
    "pinVersions": true,
    "schedule": [
      "every friday"
    ]
  },
  "xo": {
    "envs": [
      "jest"
    ],
    "prettier": true,
    "rules": {
      "capitalized-comments": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    }
  },
  "dependencies": {
    "@sendgrid/mail": "6.3.1",
    "graphql-request": "1.8.2",
    "micro": "9.3.3",
    "micro-cors": "0.1.1",
    "micro-post": "2.0.0",
    "micro-sentry": "1.2.0",
    "mjml": "4.3.1",
    "node-fetch": "2.4.0",
    "now-env": "3.1.0",
    "puppeteer": "1.15.0"
  },
  "devDependencies": {
    "husky": "2.1.0",
    "jest": "24.7.1",
    "lint-staged": "8.1.5",
    "micro-dev": "3.0.0",
    "nock": "10.0.6",
    "prettier": "1.17.0",
    "xo": "0.24.0"
  }
}
