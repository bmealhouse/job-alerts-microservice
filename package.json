{
  "name": "job-alert-microservice",
  "version": "1.0.0",
  "description": "Monitor websites for new job postings",
  "main": "index.js",
  "author": "Brent Mealhouse <bmealhouse@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "deploy": "",
    "precommit": "lint-staged",
    "prepush": "xo",
    "start": "node index.js"
  },
  "lint-staged": {
    "*.js": [
      "xo",
      "prettier --write",
      "git add"
    ]
  },
  "now": {
    "env": {
      "NODE_ENV": "production",
      "PRISMA_SERVER_ENDPOINT": "@prisma-server-endpoint",
      "SENDGRID_API_KEY": "@webtask-sendgrid-api-key",
      "SENDGRID_TO": "bmealhouse@gmail.com"
    }
  },
  "prettier": {
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "renovate": {
    "automerge": true,
    "automergeType": "branch-push",
    "pinVersions": true,
    "schedule": [
      "every friday"
    ]
  },
  "xo": {
    "prettier": true,
    "rules": {
      "capitalized-comments": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    }
  },
  "dependencies": {
    "@sendgrid/mail": "6.3.1",
    "esm": "3.0.82",
    "graphql-request": "1.8.2",
    "mjml": "4.1.2",
    "now-env": "3.1.0",
    "puppeteer": "1.7.0"
  },
  "devDependencies": {
    "lint-staged": "7.2.2",
    "prettier": "1.14.2",
    "xo": "0.22.0"
  }
}
